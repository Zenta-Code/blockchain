generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String?  @default("employee")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Block {
  id           Int         @id @default(autoincrement())
  hash         String      @unique
  prevHash     String
  data         String
  name         String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  blockChainId Int?
  BlockChain   BlockChain? @relation(fields: [blockChainId], references: [id])
}

model BlockChain {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  block     Block[]
}

model SocketEvent {
  id        Int      @id @default(autoincrement())
  socketId  String
  event     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
