// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// prisma schema for attendance system using blockchain mechanism. so that the data is immutable and secure.

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String?  @default("employee")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Block {
  id           Int         @id @default(autoincrement())
  hash         String      @unique
  prevHash     String
  data         String
  name         String
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt 
  BlockChain   BlockChain? @relation(fields: [blockChainId], references: [id])
  blockChainId Int?
}

model BlockChain {
  id        Int      @id @default(autoincrement())
  block     Block[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SocketEvent {
  id        Int      @id @default(autoincrement())
  socketId  String
  event     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
